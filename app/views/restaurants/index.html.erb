<%= link_to '+ add restaurant', new_restaurant_path, class: 'btn btn-primary' %>

<ul>
<% @restaurants.each do |restaurant| %>
  <li>
    <h1><%= restaurant.name %></h1>
    <p><%= restaurant.category %></p>

    <%= link_to 'more...', restaurant_path(restaurant), class: 'btn btn-info' %>
    <br><hr>
  </li>
<% end %>
</ul>
